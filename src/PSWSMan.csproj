<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0</TargetFrameworks>
    <AssemblyName>PSWSMan</AssemblyName>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>10.0</LangVersion>
    <!--A conflict with IgnoredAccessChecksToGenerator and Lib.Harmony fires this-->
    <NoWarn>CS0436</NoWarn>
    <InternalsAssemblyNames>System.Management.Automation</InternalsAssemblyNames>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Devolutions.Sspi" Version="2022.11.18" />
    <PackageReference Include="IgnoresAccessChecksToGenerator" Version="0.5.0" PrivateAssets="All" />
    <PackageReference Include="Lib.Harmony" Version="2.2.2" />
    <PackageReference Include="System.Formats.Asn1" Version="6.0.0" PrivateAssets="all" />
    <Reference Include="../output/lib/System.Management.Automation/7.2.0/System.Management.Automation.dll" PrivateAssets="all" />
  </ItemGroup>
</Project>
